        <a href="/create" class="btn btn-primary mt-4"> Agregar </a>
        <table class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">ID</th>
                    <th scope="col">USUARIO</th>
                    <th scope="col">ROL</th>
                    <th scope="col">ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                <!-- aca los datos que vienen del enrutador, con for each -->
                <% results.forEach((user)=> { %>
                    <tr>
                        <td>
                            <%= user.id %>
                        </td>
                        <td>
                            <%= user.user %>
                        </td>
                        <td>
                            <%= user.rol %>
                        </td>
                        <td>
                            <a href="/edit/<%= user.id %>" class="btn btn-outline-success">EDITAR</a>

                            <a href="/delete/<%= user.id %>" class="btn btn-outline-danger">BORRAR</a>

                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
