    <script>
        $(document).ready(function () {
            $('#users').DataTable({
                ajax:{
                    url:"/data",
                    dataSrc:""
                },
                columns:[
                    {data: "id"},
                    {data: "user"},
                    {data: "rol"},
                    {data: null, 
                    "render": function(data){
                        return '<a href="/edit/'+data.id+'"class="btn btn-outline-success"><i class="fa-solid fa-pen-to-square"></i></a><a onclick="confirmar('+data.id+')" class="btn btn-outline-danger"><i class="fa-solid fa-trash-can"></i></a>'
                    }}
                ],
                pageLength: 5,
                lengthMenu:[[5,10,20,-1], [5,10,20,'Todos']]
            }
            );
        })

        function confirmar(id) {
            Swal.fire({
                title: 'Confirma eliminar registro Id# '+id+'?',
                // text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Confirmar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location = '/delete/' +id;
                }
            })
        }

    </script>
